<Window x:Class="myTunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myTunes"
        mc:Ignorable="d"
        Title="myTunes" Height="477" Width="894">

    <Grid>
        <DockPanel Width="auto" Height="auto">
            <ToolBar DockPanel.Dock="Top" Height="35"/>
            
            <ListBox DockPanel.Dock="Left" x:Name="playlistListBox" Width="150" Margin="10">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <DockPanel Width="auto" Height="auto">
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Height="40">
                    <!--Add buttons -->
                </StackPanel>
                            
                <DataGrid DockPanel.Dock="Top" Margin="10"/>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
