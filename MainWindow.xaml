<Window x:Class="myTunes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:myTunes"
        mc:Ignorable="d"
        Title="myTunes" Height="477" Width="894">
    <Window.Resources>
        <!--Context menu for playlists ListBox items that pops up when right click-->
        <ContextMenu x:Key="listboxItemContextMenu">
            <MenuItem Header="Rename"/>
            <MenuItem Header="Remove"/>
        </ContextMenu>

        <ContextMenu x:Key="listboxItemContextMenu_Disable" IsEnabled="False">
            <MenuItem Header="Rename"/>
            <MenuItem Header="Remove"/>
        </ContextMenu>
    </Window.Resources>

    <Grid>
        <DockPanel Width="auto" Height="auto">
            <ToolBar DockPanel.Dock="Top" Height="35">
                <Button ToolTip="Open">
                    <Image Source="/btn_folder.png"/>
                </Button>
                <Button ToolTip="New Playlist">
                    <Image Source="/btn_addSong.png"/>
                </Button>
                <Button ToolTip="About">
                    <Image Source="/btn_info.png"/>
                </Button>
            </ToolBar>
            
            <ListBox DockPanel.Dock="Left" x:Name="playlistListBox" Width="150" Margin="10" MouseRightButtonUp="playlistListBox_MouseRightButtonUp">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <Label Content="{Binding}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
            
            <DockPanel Width="auto" Height="auto">
                <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Height="40">
                    <!--Add buttons -->
                </StackPanel>
                            
                <DataGrid DockPanel.Dock="Top" Margin="10"/>
            </DockPanel>
        </DockPanel>
    </Grid>
</Window>
